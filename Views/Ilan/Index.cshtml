@model IEnumerable<Emlak.Models.Ilan>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        @Html.Action("PartialFiltre", "Home")

        <!--İlan Listesi-->
        <br />

        <div class="col-md-9">
            <div class="thumbnail" style="width:845px;">


                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Home/Index">Anasayfa</a></li>
                        <li class="breadcrumb-item active" aria-current="page">İlan Listesi </li>
                    </ol>
                </nav>

                <br />

                <table class="table">
                    <tr>
                        <th>
                            Mahalle
                        </th>
                        <th>
                            Tip
                        </th>

                        <th>
                            Adres
                        </th>

                        <th>
                            Şehir
                        </th>
                        <th>
                            Semt
                        </th>
                        <th>
                            Durum
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mahalle.MahalleAd)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tip.TipAd)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Adres)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Mahalle.Semt.Sehir.SehirAd)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mahalle.Semt.SemtAd)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tip.Durum.DurumAd)



                            </td>
                            <td>
                                <a class="btn btn-success" href="@Url.Action("Images", new { id = item.IlanId })"><i class="fa fa-camera" aria-hidden="true"></i> Resim Ekle</a>
                                <a class="btn btn-primary" href="@Url.Action("Edit", new { id = item.IlanId })"><i class="fa fa-edit" aria-hidden="true"></i> Düzenle</a>
                                <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.IlanId })"><i class="fa fa-trash" aria-hidden="true"></i> Sil</a>
                            </td>
                        </tr>
                    }


                </table>

            </div>
        </div>
    </div>
</div>


